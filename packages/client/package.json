{
  "name": "@micdrop/client",
  "version": "2.0.0",
  "description": "A lib for browser that helps to use the mic and speaker for voice conversation",
  "author": "Lonestone",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lonestone/micdrop.git",
    "directory": "packages/client"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "microphone",
    "audio",
    "browser",
    "voice",
    "conversation"
  ],
  "dependencies": {
    "@ricky0123/vad-web": "0.0.24",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
