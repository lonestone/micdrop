{
  "name": "micdrop-monorepo",
  "author": "Lonestone",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "doc"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:main": "turbo run dev --filter=@micdrop/client --filter=@micdrop/server",
    "dev:demo": "turbo run dev --filter=@micdrop/client --filter=@micdrop/server --filter=@micdrop/demo-client --filter=@micdrop/demo-server",
    "dev:client": "turbo run dev --filter=@micdrop/client",
    "dev:server": "turbo run dev --filter=@micdrop/server",
    "dev:doc": "turbo run dev --filter=@micdrop/doc",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "latest"
  },
  "packageManager": "npm@10.2.4"
}
