{
  "name": "micdrop-monorepo",
  "author": "Lonestone",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "website"
  ],
  "scripts": {
    "build": "turbo run build --concurrency=12",
    "dev": "turbo run dev --concurrency=12",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "latest"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10.2.4"
}
